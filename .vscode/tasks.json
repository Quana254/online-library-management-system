{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build (MinGW64)",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17", "-O2", "-Wall",
        "${workspaceFolder}/src/*.cpp",
        "-o", "${workspaceFolder}/bin/app.exe"
      ],
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc"]
    }
  ]
}
